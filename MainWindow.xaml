<Window x:Class="probna_kartkowka_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:probna_kartkowka_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plik">
                <MenuItem Header="Otwórz" Click="otworz_click"></MenuItem>
                <MenuItem Header="Zapisz" Click="zapisz_click"></MenuItem>
                <MenuItem Header="Zamknij" Click="zamknij_click"></MenuItem>

            </MenuItem>
            <MenuItem Header="Liczby">
                <MenuItem Header="Wylosuj" Click="liczby_Click"></MenuItem>
                <MenuItem Header="Suma" Click="suma_click"></MenuItem>
                <MenuItem Header="Max" Click="max_click"></MenuItem>
                <MenuItem Header="Min" Click="min_click"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBox x:Name="wpisywany_text"
    TextWrapping="Wrap"
     AcceptsReturn="True"
     VerticalScrollBarVisibility="Auto"
     FontSize="24" TextChanged="wpisywany_text_TextChanged">

        </TextBox>
    </DockPanel>
</Window>
